extends layout

block content
  section.hero
    h1 Welcome to Home Consumer Products!
    p Find the best products for your home at unbeatable prices.
    a.button(href='/auth/login') Login to Start Shopping

  section.products
    h2 Featured Products
    if products.length > 0
      .product-list
        each product in products
          .product
            .product-image
              img(src=product.imgURL, alt=product.name)
            .product-details
              h3 #{product.name}
              p.price $#{product.price}
              p.category Category: #{product.category ? product.category.name : 'Uncategorized'}
              a.button(href=`/products/${product._id}`) View Details
    else
      p No products available.
doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='/') Home Consumer Products
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            if menus && menus.length > 0
              each menu in menus
                li.nav-item
                  a.nav-link(href=menu.url) #{menu.text}
            else
              li.nav-item
                a.nav-link(href='#') No menus available
            p Debug Menus: #{JSON.stringify(menus)}
          ul.navbar-nav
            li.nav-item
                a.btn.btn-primary.ms-2(href='/carts') cart
            li.nav-item
              a.btn.btn-primary.ms-2(href='/auth/login') Login
    .container.mt-4
      block content
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
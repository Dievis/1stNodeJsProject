extends ../admin/Adminlayout

block content
  .container
    h1.text-center.mb-4 Quản lý danh mục
    .d-flex.justify-content-between.mb-3
      a.btn.btn-primary(href='/admin/categories/create')
        i.fas.fa-plus-circle.me-2
        | Thêm danh mục mới

    if categories && categories.length > 0
      .table-responsive
        table.table.table-striped.table-hover
          thead
            tr
              th Tên danh mục
              th Mô tả
              th Hành động
          tbody
            each category in categories
              tr
                td= category.name
                td= category.description || 'Không có mô tả'
                td
                  a.btn.btn-sm.btn-warning.me-2(href=`/admin/categories/${category._id}/edit`)
                    i.fas.fa-edit.me-1
                    | Sửa
                  a.btn.btn-sm.btn-danger(href=`/admin/categories/${category._id}/delete`)
                    i.fas.fa-trash.me-1
                    | Xóa
    else
      p.text-center.text-muted Không có danh mục nào.


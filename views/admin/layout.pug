doctype html
html
  head
    title Admin Dashboard
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css", rel="stylesheet")
    style.
      body {
        background-color: #f8f9fa;
      }
      .sidebar {
        min-width: 250px;
        max-width: 250px;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        background-color: #343a40;
        color: #fff;
      }
      .sidebar .nav-link {
        color: #adb5bd;
      }
      .sidebar .nav-link.active {
        background-color: #495057;
        color: #fff;
      }
      .main-content {
        margin-left: 250px;
        padding: 20px;
      }
      footer {
        background-color: #343a40;
        color: #adb5bd;
        text-align: center;
        padding: 10px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
  body
    nav.sidebar
      h4.text-center.mb-4.text-white.mt-4 Admin Menu
      ul.nav.nav-pills.flex-column
        li.nav-item
          a.nav-link(class=(activeRoute === '/admin/dashboard' ? 'active' : ''))(href='/admin/dashboard')
            i.fas.fa-home.me-2
            | Dashboard
        li.nav-item
          a.nav-link(class=(activeRoute === '/menus' ? 'active' : ''))(href='/menus')
            i.fas.fa-bars.me-2
            | Menus
        li.nav-item
          a.nav-link(class=(activeRoute === '/products' ? 'active' : ''))(href='/products')
            i.fas.fa-box-open.me-2
            | Products
        li.nav-item
          a.nav-link(class=(activeRoute === '/categories' ? 'active' : ''))(href='/categories')
            i.fas.fa-th-list.me-2
            | Categories
        li.nav-item
          a.nav-link(class=(activeRoute === '/roles' ? 'active' : ''))(href='/roles')
            i.fas.fa-user-shield.me-2
            | Roles
        li.nav-item
          a.nav-link(class=(activeRoute === '/users' ? 'active' : ''))(href='/users')
            i.fas.fa-user-friends.me-2
            | Users
        li.nav-item
          a.nav-link(class=(activeRoute === '/vouchers' ? 'active' : ''))(href='/vouchers')
            i.fas.fa-ticket-alt.me-2
            | Vouchers
        li.nav-item
          form(action='/auth/logout', method='POST', class='d-inline')
            button.btn.btn-link.text-white.nav-link(type='submit') 
              i.fas.fa-sign-out-alt.me-2
              | Logout

    .main-content
      .d-flex.justify-content-between.align-items-center.mb-4
        h2.page-title.text-primary
          i.fas.fa-cogs.me-2
          | Admin Dashboard
        .user-info.d-flex.align-items-center
          i.fas.fa-user-circle.text-primary.me-2(style="font-size: 2rem;") 
          span.text-dark Hi, Admin

      block content

    footer
      p.mb-0 &copy; #{new Date().getFullYear()} Admin Dashboard. All rights reserved.

    block scripts
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js")



extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card.shadow-lg.rounded-4
          .card-header.bg-primary.text-white.text-center
            h2.mb-0 Reset Your Password
          .card-body
            if error
              .alert.alert-danger #{error}
            if success
              .alert.alert-success #{success}
            form(method="POST", action=`/auth/resetpassword/${token}`)
              .mb-3
                label.form-label(for="newpassword")
                  i.fas.fa-lock.me-2
                  | New Password
                input.form-control(type="password", name="newpassword", id="newpassword", required placeholder="Enter new password")
              .mb-3
                label.form-label(for="confirmpassword")
                  i.fas.fa-lock.me-2
                  | Confirm Password
                input.form-control(type="password", name="confirmpassword", id="confirmpassword", required placeholder="Confirm your password")
              .d-flex.justify-content-between.mt-4
                button.btn.btn-success.w-50(type="submit") Reset Password
                a.btn.btn-outline-secondary.w-45.ms-2(href="/auth/login") Back to Login
          .card-footer.text-muted.text-center
            small Nếu bạn không nhận được email reset password, vui lòng liên hệ với chúng tôi.


extends layout

block content
  h1 Change Password
  form(method="POST", action="/auth/change_password")
    .mb-3
      label.form-label(for="oldpassword") Current Password
      input.form-control(type="password", name="oldpassword", id="oldpassword", required)
    .mb-3
      label.form-label(for="newpassword") New Password
      input.form-control(type="password", name="newpassword", id="newpassword", required)
    button.btn.btn-warning(type="submit") Change Password
    a.btn.btn-secondary.ms-2(href="/") Cancel

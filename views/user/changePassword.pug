extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card.shadow
          .card-header.bg-warning.text-white.text-center
            h3.mb-0 Đổi mật khẩu
          .card-body
            form(method="POST", action="/auth/change_password")
              .mb-3
                label.form-label(for="oldpassword") Mật khẩu hiện tại
                input.form-control(type="password", name="oldpassword", id="oldpassword", required placeholder="Nhập mật khẩu cũ")
              .mb-3
                label.form-label(for="newpassword") Mật khẩu mới
                input.form-control(type="password", name="newpassword", id="newpassword", required placeholder="Nhập mật khẩu mới")
              .d-flex.justify-content-between
                button.btn.btn-warning(type="submit")
                  i.fas.fa-key.me-2
                  | Đổi mật khẩu
                a.btn.btn-secondary(href="/")
                  i.fas.fa-arrow-left.me-2
                  | Quay lại

block styles
  style.
    body {
      background-color: #f8f9fa;
    }
    .card {
      border-radius: 1rem;
    }
    .card-header {
      border-bottom: none;
    }

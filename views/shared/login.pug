doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    style.
      body {
        background-color: #EDE7D3; /* Màu nền */
        font-family: Arial, sans-serif;
      }
      .card {
        background-color: #fff;
        border: none;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2); /* Hiệu ứng đổ bóng mạnh hơn */
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Hiệu ứng hover */
      }
      .card:hover {
        transform: translateY(-5px); /* Nâng card lên khi hover */
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3); /* Tăng độ sâu khi hover */
      }
      .btn-primary {
        background-color: #6C757D; /* Màu nút chính */
        border: none;
      }
      .btn-primary:hover {
        background-color: #5A6268; /* Màu nút khi hover */
      }
      .btn-secondary {
        background-color: #343A40; /* Màu nút phụ */
        border: none;
      }
      .btn-secondary:hover {
        background-color: #23272B; /* Màu nút phụ khi hover */
      }
      .form-label {
        font-weight: bold;
        color: #495057;
      }
      .alert {
        border-radius: 5px;
      }
  body
    block content
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card
            .card-header.bg-dark.text-white
              h3.text-center Login
            .card-body
              //- Form đăng nhập
              form(method="POST", action="/auth/login")
                .mb-3
                  label.form-label(for="username") Username
                  input.form-control(type="text", name="username", id="username", placeholder="Enter your username", required)
                .mb-3
                  label.form-label(for="password") Password
                  input.form-control(type="password", name="password", id="password", placeholder="Enter your password", required)
                button.btn.btn-primary.w-100(type="submit") Login
              //- Liên kết hỗ trợ
              .mt-3.text-center
                a.btn.btn-link(href="/auth/forgotpassword") Forgot Password?
                a.btn.btn-secondary.ms-2(href="/auth/signup") Sign Up

            //- Phần hiển thị lỗi
            if error
              .alert.alert-danger.mt-3 #{error}

    //- Bootstrap JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')



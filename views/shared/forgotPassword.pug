doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    style.
      body {
        background-color: #EDE7D3;
        font-family: Arial, sans-serif;
      }
      .card {
        background-color: #fff;
        border: none;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2); 
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .card:hover {
        transform: translateY(-5px); 
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3); 
      }
      .btn-primary {
        background-color: #6C757D;
        border: none;
      }
      .btn-primary:hover {
        background-color: #5A6268; 
      }
      .btn-secondary {
        background-color: #343A40;
        border: none;
      }
      .btn-secondary:hover {
        background-color: #23272B; 
      }
      .form-label {
        font-weight: bold;
        color: #495057;
      }
      .alert {
        border-radius: 5px;
      }
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.p-4
            h2.text-center.mb-4.text-dark Forgot Password
            form(method="POST", action="/auth/forgotpassword")
              .mb-3
                label.form-label(for="email") Enter your email
                input.form-control(type="email", name="email", id="email", placeholder="Enter your email", required)
              button.btn.btn-primary.w-100(type="submit") Send Reset Link
              a.btn.btn-secondary.w-100.mt-3(href="/auth/login") Back to Login
            if success
              .alert.alert-success.mt-3 #{success}
            if error
              .alert.alert-danger.mt-3 #{error}

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
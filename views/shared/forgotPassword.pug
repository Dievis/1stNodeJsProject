doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    block content
      h1 Forgot Password
      form(method="POST", action="/auth/forgotpassword")
        .mb-3
          label.form-label(for="email") Enter your email
          input.form-control(type="email", name="email", id="email", required)
        button.btn.btn-danger(type="submit") Send Reset Link
        a.btn.btn-secondary.ms-2(href="/auth/login") Back to Login
      
      //- Phần hiển thị lỗi
      if error
        .alert.alert-danger.mt-3 #{error}

    //- Bootstrap JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
